{
  "name": "@resolid/nxt-tailwind",
  "version": "1.0.0",
  "description": "Resolid NxtUI preset for TailwindCSS.",
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "@resolid/nxt-utils": "workspace:*"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.2"
  },
  "peerDependencies": {
    "tailwindcss": ">=3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/resolid/nxt",
    "directory": "packages/nxt-tailwind"
  },
  "homepage": "https://nxt.resolid.tech",
  "license": "MIT"
}
