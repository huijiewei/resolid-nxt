{
  "name": "@resolid/nxt-tailwind",
  "version": "1.0.0",
  "description": "Resolid NxtUI preset for TailwindCSS.",
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "dependencies": {
    "@resolid/nxt-utils": "workspace:*"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0"
  },
  "peerDependencies": {
    "tailwindcss": ">=3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/huijiewei/resolid-nxt",
    "directory": "packages/nxt-tailwind"
  },
  "homepage": "https://nxt.resolid.tech",
  "license": "MIT"
}
