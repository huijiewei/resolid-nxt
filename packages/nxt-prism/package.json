{
  "name": "@resolid/nxt-prism",
  "version": "1.0.0",
  "description": "A lean Prism highlighter component for React",
  "sideEffects": false,
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "dependencies": {
    "@resolid/nxt-utils": "workspace:*",
    "@types/prismjs": "^1.26.0"
  },
  "devDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/huijiewei/resolid-nxt",
    "directory": "packages/nxt-prism"
  },
  "homepage": "https://nxt.resolid.tech",
  "license": "MIT"
}
