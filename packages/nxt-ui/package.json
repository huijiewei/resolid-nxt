{
  "name": "@resolid/nxt-ui",
  "version": "1.0.0",
  "description": "Ready to use UI components built with TailwindCSS.",
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist.index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist.index.d.ts"
    }
  },
  "dependencies": {
    "@resolid/nxt-utils": "workspace:*",
    "class-variance-authority": "^0.5.3"
  },
  "devDependencies": {
    "@resolid/nxt-tailwind": "workspace:*",
    "@resolid/nxt-tests": "workspace:*",
    "@vitejs/plugin-react": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/resolid/nxt",
    "directory": "packages/nxt-ui"
  },
  "homepage": "https://nxt.resolid.tech/ui",
  "license": "MIT"
}
