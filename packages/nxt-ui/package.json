{
  "name": "@resolid/nxt-ui",
  "version": "1.0.0",
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist.index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./hooks": {
      "import": "./dist/hooks.js",
      "require": "./dist/hooks.cjs"
    },
    "./tailwind": {
      "import": "./dist/tailwind.js",
      "require": "./dist/tailwind.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ],
      "hooks": [
        "./dist/hooks.d.ts"
      ],
      "tailwind": [
        "./dist/tailwind.d.ts"
      ]
    }
  },
  "dependencies": {
    "@resolid/nxt-utils": "workspace:*"
  },
  "devDependencies": {
    "@resolid/nxt-tests": "workspace:*",
    "@vitejs/plugin-react-swc": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.1"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "tailwindcss": ">=3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/resolid/nxt",
    "directory": "packages/nxt-ui"
  },
  "homepage": "https://nxt.resolid.tech/ui",
  "license": "MIT"
}
